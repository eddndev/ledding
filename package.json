{
  "name": "ledding",
  "version": "2.0.0",
  "description": "High-performance LED matrix animation library for Canvas 2D",
  "type": "module",
  "main": "dist/ledding.cjs.js",
  "module": "dist/ledding.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ledding.esm.js",
      "require": "./dist/ledding.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./renderers": {
      "import": "./dist/renderers/index.js",
      "types": "./dist/renderers/index.d.ts"
    },
    "./aligners": {
      "import": "./dist/aligners/index.js",
      "types": "./dist/aligners/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "canvas",
    "led",
    "matrix",
    "animation",
    "graphics",
    "visualization",
    "webgl",
    "2d",
    "effects"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {},
  "author": "Eduardo Alonso",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/eddndev/ledding.git"
  },
  "bugs": {
    "url": "https://github.com/eddndev/ledding/issues"
  },
  "homepage": "https://github.com/eddndev/ledding#readme",
  "engines": {
    "node": ">=16.0.0"
  }
}
